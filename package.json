{
  "name": "budget-tracker",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc -p tsconfig.json",
    "esbuild": "node ./esbuild.js",
    "build:prod": "npm run tsc && cross-env NODE_ENV=production npm run esbuild",
    "build:dev": "npm run tsc && cross-env NODE_ENV=development npm run esbuild",
    "esbuild:old": "esbuild src/index.tsx --bundle --minify --sourcemap --target=chrome58,firefox57,safari11,edge16 --outfile=dist/esbuild/index.js",
    "esbuild:dev": "esbuild src/index.tsx --bundle --outfile=dist/esbuild/index.js",
    "esbuild:watch": "esbuild src/index.tsx --bundle --watch --outfile=dist/esbuild/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dryzhkov/budget-tracker.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dryzhkov/budget-tracker/issues"
  },
  "homepage": "https://github.com/dryzhkov/budget-tracker#readme",
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "browser": {
    "path": "path-browerify"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.11",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "cross-env": "^7.0.3",
    "esbuild": "^0.12.9",
    "fs-extra": "^10.0.0",
    "typescript": "^4.3.4"
  }
}
